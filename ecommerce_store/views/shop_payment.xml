    <template id="inherit_categories_recursive_6" inherit_id="website_sale.products_categories"
              name="Category List Items Custom">
        <xpath expr="//div[@id='wsale_products_categories_collapse']" position="replace">
            <div class="collapse d-lg-block" id="wsale_products_categories_collapse">
                <strong class="o_categories_collapse_title text-uppercase">Categories</strong>
                <ul class="nav flex-column my-2" id="o_shop_collapse_category">
                    <form>
                        <li class="nav-item">
                            <div t-att-data-link-href="keep('/shop', category=0)"
                                 class="custom-control custom-radio mb-1 d-inline-block">
                                <i t-if="children"
                                   t-attf-class="fa #{'fa-minus' if c.id in category.parents_and_self.ids else 'fa-plus'}"
                                   t-attf-title="#{'Unfold' if c.id in category.parents_and_self.ids else 'Fold'}"
                                   t-attf-aria-label="#{'Unfold' if c.id in category.parents_and_self.ids else 'Fold'}"
                                   role="img"/>

                                <input type="radio" style="pointer-events:none;"
                                       class="custom-control-input o_not_editable" t-att-id="all_products"
                                       t-att-value="all_products" t-att-checked="'true' if not category else None"/>
                                <label class="font-weight-normal" t-att-for="all_products">All Products</label>
                            </div>
                        </li>
                        <t t-foreach="categories" t-as="c">
                            <t t-call="website_sale.option_collapse_categories_recursive"/>
                        </t>
                    </form>
                </ul>
            </div>
        </xpath>
    </template>

    <template id="product_lines_inherit" inherit_id="website_sale.cart">
             <xpath expr="//div[hasclass('clearfix')]" position="before">

            <p class="text-danger">Delievry can't be accepted on following days</p>



            <div class="weekDays-selector">
                <t t-if="website_sale_order.monday==True">
                    <input type="checkbox" checked="1" id="weekday-mon" class="weekday" name="weekday" value="monday"/>
                    <label for="weekday-mon">Monday</label>
                </t>
                <t t-else="">
                    <input type="checkbox" checked="1" id="weekday-mon" class="weekday" name="weekday" value="monday"/>
                    <label for="weekday-mon">Monday</label>
                </t>


                <t t-if="website_sale_order.tuesday==True">
                <input type="checkbox" checked="1" id="weekday-tue" class="weekday" name="weekday" value="tuesday"/>
                <label for="weekday-tue">Tuesday</label>
                </t>
                <t t-else="">
                    <input type="checkbox" id="weekday-tue" class="weekday" name="weekday" value="tuesday"/>
                    <label for="weekday-tue">Tuesday</label>
                </t>
                <t t-if="website_sale_order.wednesday==True">
                <input type="checkbox" checked="1" id="weekday-wed" class="weekday" name="weekday" value="wednesday"/>
                <label for="weekday-wed">Wednesday</label>
                </t>
                <t t-else="">
                <input type="checkbox" id="weekday-wed" class="weekday" name="weekday" value="wednesday"/>
                <label for="weekday-wed">Wednesday</label>
                </t>
                <t t-if="website_sale_order.thursday==True">
                <input type="checkbox" checked="1" id="weekday-thu" class="weekday" name="weekday" value="thursday"/>
                <label for="weekday-thu">Thursday</label>
                </t>
                <t t-else="">
                <input type="checkbox" id="weekday-thu" class="weekday" name="weekday" value="thursday"/>
                <label for="weekday-thu">Thursday</label>
                </t>
                <t t-if="website_sale_order.friday==True">
                <input type="checkbox" checked="1" id="weekday-fri" class="weekday" name="weekday" value="friday"/>
                <label for="weekday-fri">Friday</label>
                </t>
                 <t t-else="">
                <input type="checkbox" id="weekday-fri" class="weekday" name="weekday" value="friday"/>
                <label for="weekday-fri">Friday</label>
                 </t>

                <t t-if="website_sale_order.saturday==True">
                <input type="checkbox" checked="1" id="weekday-sat" class="weekday" name="weekday" value="saturday"/>
                <label for="weekday-sat">Saturday</label>
                </t>
                <t t-else="">
                <input type="checkbox" id="weekday-sat" class="weekday" name="weekday" value="saturday"/>
                <label for="weekday-sat">Saturday</label>
                </t>


                <t t-if="website_sale_order.sunday==True">
                <input type="checkbox" checked="1" id="weekday-sun" class="weekday" name="weekday" value="sunday"/>
                <label for="weekday-sun">Sunday</label>
                </t>


                 <t t-else="">
                <input type="checkbox" id="weekday-sun" class="weekday" name="weekday" value="sunday"/>
                <label for="weekday-sun">Sunday</label>
                 </t>
            </div>
        </xpath>
    </template>

