    <!--Inherit Foooter and Add Newsletter in about us Section-->
    <template id="newsletter_footer_custom" inherit_id="website.footer_custom" name="Newsletter Footer">
        <xpath expr="//div[hasclass('pb24')]//p" position="after">
            <div class="pb24 news_letter">
                <t t-snippet-call="website_mass_mailing.s_newsletter_subscribe_form"/>

            </div>
        </xpath>
    </template>


    <record id="inherit_sale_order_form" model="ir.ui.view">
        <field name="name">inherit.sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='order_lines']" position="after">
                <page name="Select Delievery Day" string="Select Delievery Day">


                    <group>

                        <field name="monday"/>

                        <field name="tuesday"/>

                        <field name="wednesday"/>

                        <field name="thursday"/>

                        <field name="friday"/>

                        <field name="saturday"/>

                        <field name="sunday"/>
                    </group>


                </page>
            </xpath>
        </field>

    </record>



