<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="categories_link12" name="Categories Link">
        <div t-att-data-link-href="keep('/shop/category/' + slug(c), category=0)"
             class="custom-control custom-radio mb-1 d-inline-block">
            <i t-if="children" t-attf-class="fa #{'fa-minus' if c.id in category.parents_and_self.ids else 'fa-plus'}"
               t-attf-title="#{'Unfold' if c.id in category.parents_and_self.ids else 'Fold'}"
               t-attf-aria-label="#{'Unfold' if c.id in category.parents_and_self.ids else 'Fold'}" role="img"/>

            <input type="radio" style="pointer-events:none;" class="custom-control-input d-none" t-att-id="c.id"
                   t-att-value="c.id" t-att-checked="'true' if c.id == category.id else None"/>
            <label class="font-weight-normal" t-att-for="c.id" t-field="c.name"/>
        </div>
    </template>

    <template id="product_checkout1" name="checkout page" inherit_id="website_sale.cart">
        <xpath expr="//t[@t-call='website_sale.cart_lines']" position="before" groups="base.group_user">
            <div class="offset-md-3 col-md-6" groups="base.group_user">
                <div class="form-group form-inline">
                    <label for="select_customer">Order for:</label>
                    <!--<select name="select_customer" id="select_customer">
                    </select>-->
                    <!--<input type="text" placeholder="Search.." id="myInput" onkeyup="filterFunction()">-->
                    <div class="dropdown">
                        <input name="select_customer" placeholder="Select Customer" id="select_customer"
                               class='form-control'/>
                        <div id="select_customers" class="dropdown-content">

                        </div>


                    </div>


                </div>
            </div>
        </xpath>
    </template>


    <template id="inherit_categories_recursive_311" inherit_id="website_sale.option_collapse_categories_recursive"
              name="Category List Items Custom">
        <xpath expr="//t[@t-call='website_sale.categorie_link']" position="attributes">
            <attribute name="t-call">ecommerce_store.categories_link12</attribute>
        </xpath>
    </template>


