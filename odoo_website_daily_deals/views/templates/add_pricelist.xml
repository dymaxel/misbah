<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_download_pdf_form" model="ir.ui.view">
        <field name="name">wizard.pricelist.deal.view</field>
        <field name="model">wizard.pricelist.deal</field>
        <field name="arch" type="xml">
            <form string="PriceList">
                <group>
                    <field name="deals" required="1"/>
                </group>
                <footer>
                    <button name="wizard_binary" class="oe_highlight" string="Add Products"
                        type="object" icon="fa-arrow-circle-down"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="wizard_download_pdf_action" model="ir.actions.act_window">
        <field name="name">Select PriceList</field>
        <field name="res_model">wizard.pricelist.deal</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="resact_winomposer_multi" model="ir.actions.act_window">
        <field name="name">Add Deals</field>
        <field name="res_model">wizard.pricelist.deal</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_download_pdf_form"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_product_template"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>