					<a href="/deals">Deals &amp; Offers</a>
				</li>
			</xpath>
		</template>

		<template id="daily_deals_menu_template_footer_minimalist" inherit_id="website.template_footer_minimalist">
			<xpath expr="//div[hasclass('container')]//ul/li[last()]" position="after">
