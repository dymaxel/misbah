	<data>
		<!-- Add Deals &amp; Offers menu in all footer styles-->
		<template id="daily_deals_footer_custom" inherit_id="website.footer_custom" name="Daily Deals Footer Link">
			<xpath expr="//div[hasclass('container')]//ul/li[last()]" position="after">
				<li class="">
					<a href="/deals">Deals &amp; Offers</a>
				</li>
