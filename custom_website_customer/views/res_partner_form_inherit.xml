<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_form_inherit_customer_type" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.customer.type</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='o_address_format']" position="after">
                    <field name="Customer_Type"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_form_inherit_sale_note" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.note</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[last()]" position="after">
                    <page string="Website Sale Note" >
                        <group>
                            <field name="internal_notes"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <template id="Add_Custom_Field_Signup" inherit_id="auth_signup.fields">
            <xpath expr="//div[hasclass('field-confirm_password')]" position="after">
                <label for="confirm_password">Customer Type</label>
                <div class="customer_type_signup">
                    <input name="cust_type" t-att-value="c_type" type="hidden" />
                    <select class="selectpicker form-control" name="customer_type">
                        <t t-foreach="website.get_customer_types()" t-as="type">
                            <option t-att-value="type.id" t-esc="type.name" t-att-selected="c_type == type.name"/>
                        </t>
                        <!--<option>Customer Type</option>
                        <option>Wholesaler</option>
                        <option>Retailer</option>
                        <option>Consumer</option>-->
                    </select>
                </div>
            </xpath>
        </template>

    </data>
</odoo>

