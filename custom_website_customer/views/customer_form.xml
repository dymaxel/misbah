        <field name="url">customer-create-success</field>
        <field name="website_published">True</field>
        <field name="key">custom_website_customer.customer_created_thanks</field>
        <field name="arch" type="xml">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="container">
                        <h1>Thanks!</h1>
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="col-lg-8">
