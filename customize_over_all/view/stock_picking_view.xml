<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="vpicktree_inherit_malek" model="ir.ui.view">
        <field name="name">stock.picking.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="dxl_scheduled_date" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="dxl_date_deadline" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="view_picking_form_inherit_malek" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="before">
                <field name="sale_id" invisible="1"/>
                <field name="date_order" attrs="{'invisible': [('sale_id', '=', False)]}"/>
                <field name="force_date_deadline" attrs="{'invisible': [('sale_id', '=', False)], 'readonly': [('state', 'in', ['done', 'cancel'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>
