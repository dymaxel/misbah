<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_catalog_form_view" model="ir.ui.view">
        <field name="name">product.catalog.form.view</field>
        <field name="model">product.catalog</field>
        <field name="arch" type="xml">
            <form string="Generated Product Catalog">
                <header>
                    <button name="action_send_by_email" type="object" class="oe_highlight" string="Send By Email" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" invisible="1" />
                            <field name="create_date" />
                            <field name="categories" widget="many2many_tags" />
                        </group>
                        <group>
                            <field name="store_fname" invisible="1" />
                            <field name="datas" filename="store_fname" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="product_catalog_tree_view" model="ir.ui.view">
        <field name="name">product.catalog.tree.view</field>
        <field name="model">product.catalog</field>
        <field name="arch" type="xml">
            <tree string="Generated Product Catalog">
                <field name="create_date" />
                <button name="action_download" type="object" class="text-primary" icon="fa-download" string="Download File" />
                <button name="action_send_by_email" type="object" class="text-primary" icon="fa-envelope" string="Send By Email" />
            </tree>
        </field>
    </record>
    <record id="product_catalog_action" model="ir.actions.act_window">
        <field name="name">Generated Product Catalog</field>
        <field name="res_model">product.catalog</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="product_catalog_main_menu" name="Product Catalog" web_icon="sh_product_catalog_generator,static/description/menu.png" />
    <menuitem id="product_catalog_sub_menu" name="Product Catalog" parent="product_catalog_main_menu" />
    <menuitem id="product_catalog_generated_menu" name="Generated Product Catalog" parent="product_catalog_sub_menu" sequence="2" action="product_catalog_action" />
</odoo>
