<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.module.category" id="module_product_catalog_category">
        <field name="name">Product Catalog</field>
        <field name="description">Product Catalog</field>
        <field name="sequence">20</field>
    </record>
    <record id="sh_catalog_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_product_catalog_category" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>
    <record id="sh_catalog_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_product_catalog_category" />
        <field name="implied_ids" eval="[(4, ref('sh_catalog_user'))]" />
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]" />
    </record>
</odoo>
