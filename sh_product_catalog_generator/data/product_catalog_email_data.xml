<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="email_template_edi_product_catalog" model="mail.template">
        <field name="name">Product Catalog: Send by email</field>
        <field name="model_id" ref="sh_product_catalog_generator.model_product_catalog" />
        <field name="email_from">${object.create_uid.email_formatted |safe}</field>
        <field name="subject">Product Catalog</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    We Have Attached Product Catalog.
                </p>
            </div>
        </field>
        <field name="lang">${object.create_uid.partner_id.lang}</field>
        <field name="auto_delete" eval="False" />
    </record>
</odoo>
